FROM debian:10

RUN apt-get update && apt-get install -y --no-install-recommends \
    wget \
    ca-certificates \
    curl \
    gcc \
    g++ \
    perl \
    python \
    python-dev \
    python-setuptools \
    python3 \
    python3-pip \
    libgmp10 \
    libgmp-dev \
    locales \
    bash \
    make \
    mawk \
    file \
    pkg-config \
    git \
    openssh-client \
    && rm -rf /var/lib/apt/lists/*

ENV CHPL_VERSION=1.23.0
ENV CHPL_HOME=/opt/chapel/$CHPL_VERSION
RUN useradd -m ubuntu
ADD id_rsa /home/ubuntu/.ssh/
RUN chown -R ubuntu:ubuntu /home/ubuntu
RUN chmod -R 777 /opt/

USER ubuntu

ENV CHPL_COMM_SUBSTRATE=udp
ENV CHPL_COMM=gasnet
ENV CHPL_LAUNCHER=amudprun

RUN mkdir -p /opt/chapel \
    && wget -q -O - https://github.com/chapel-lang/chapel/archive/$CHPL_VERSION.tar.gz | tar -xzC /opt/chapel --transform 's/chapel-//' \
    && make -C $CHPL_HOME \
    #&& make -C $CHPL_HOME chpldoc test-venv mason \
    && make -C $CHPL_HOME cleanall

ENV PATH=/opt/chapel/bin/linux64-x86_64/:$PATH

# Add Arkouda files, install dependencies, and build Arkouda server
ADD src/ /opt/src
ADD Makefile /opt/Makefile
ADD dep/ /opt/dep
ADD VERSION /opt/VERSION
WORKDIR /opt
USER root
RUN chown -R ubuntu:ubuntu /opt/

USER ubuntu
ARG SSH_SERVERS=${SSH_SERVERS}
ENV SSH_SERVERS=${SSH_SERVERS}
ARG GASNET_MASTERIP=${GASNET_MASTERIP}
ENV GASNET_MASTERIP=${GASNET_MASTERIP}

RUN make install-deps

ENV PATH=$CHPL_HOME/bin/linux64-x86_64/:$PATH
RUN chown ubuntu:ubuntu -R /home/ubuntu/.ssh/
USER ubuntu

RUN make

# Add startup script and set as entrypoint
ENTRYPOINT ./arkouda_server -nl 2

EXPOSE 5555
EXPOSE 5000-65000/udp

